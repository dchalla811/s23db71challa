extends layout
 
block content
  h1= title
 
  p Number of rows #{query.rows}
  p Number of columns #{query.cols}
 
  - let rows=Number(query.rows)
  - let cols=Number(query.cols)
 
  if !(Number.isInteger(rows)) || !(Number.isInteger(cols))
    p outofrange rows or columns
  else if (rows<1) || (rows>10)
    p Rows are out of range
  else if (cols<1) || (cols>10)
    p Cols are out of range
  else
   table#outer
     - for(let x=0; x<rows; x++){
        tr#middle
         - for(let y=0; y<cols; y++){
            if(x==y)
                td 1
            else if ((x == y + 1))
                td 2
            else if (x === y - 1)
                td #{x}
            else 
                td 0
         -}
     -}